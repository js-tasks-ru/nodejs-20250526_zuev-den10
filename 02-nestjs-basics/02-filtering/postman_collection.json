{
  "info": {
    "name": "Задание: Реализация фильтрации и пагинации задач",
    "description": "Postman collection for /tasks endpoint with filtering and pagination.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Tasks",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"]
        }
      },
      "response": []
    },
    {
      "name": "Filter Tasks by Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/tasks?status=pending",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"],
          "query": [
            {
              "key": "status",
              "value": "pending"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Paginate Tasks",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/tasks?page=1&limit=2",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "2"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Filter and Paginate Tasks",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/tasks?status=in_progress&page=1&limit=1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"],
          "query": [
            {
              "key": "status",
              "value": "in_progress"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "1"
            }
          ]
        }
      },
      "response": []
    }
  ]
}
